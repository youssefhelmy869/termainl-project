{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Current File (SFML)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "C:/msys64/ucrt64/bin/g++.exe -Wall -Wextra -g3 \"${file}\" -o \"${fileDirname}/output.exe\" -lsfml-graphics -lsfml-window -lsfml-system; if ($?) { & \"${fileDirname}/output.exe\" }"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}